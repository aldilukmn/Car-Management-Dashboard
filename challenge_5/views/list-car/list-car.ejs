<div class="d-flex flex-column w-100">
  <section class="flex-grow-1 mx-4 mt-4">
    <p class="active-list-1">
      <span class="fw-bold">Cars</span>
      <img
        src="/svg/chevron-right-solid.svg"
        alt="chevron-right-solid-icon"
        width="5"
      />
      <span>List Car</span>
    </p>
    <div
      class="d-flex justify-content-between align-items-center mb-3 active-list-2"
    >
      <div class="fw-bold">List Car</div>
      <a href="cars/new-car" class="btn btn-primary rounded-1">
        <b>+</b>Add New Car
      </a>
    </div>
    <div class="d-flex gap-3 active-list-3">
      <button class="btn btn-light rounded-1 border border-primary">All</button>
      <button class="btn btn-light rounded-1 border border-primary">
        Small
      </button>
      <button class="btn btn-light rounded-1 border border-primary">
        Medium
      </button>
      <button class="btn btn-light rounded-1 border border-primary">
        Large
      </button>
    </div>
    <div class="row my-3">
      <% data.forEach((car) => { %>
      <div class="col-lg-4 mb-4">
        <div class="card shadow-sm">
          <img
            src="<%= car.image %>"
            class="card-img-top img-car-list"
            alt="car-icon"
          />
          <div class="card-body mx-3 p-0 mt-3">
            <p class="card-title fs-5">
              <%= car.name %>
            </p>
            <h5 class="card-text">Rp. <%= car.rent.toLocaleString('id-ID') %> / hari</h5>
            <p><%= car.update %></p>
            <div class="container text-center">
              <div class="row gx-4">
                <a
                  href="cars/<%= car.id %>?__method=DELETE"
                  class="btn btn-outline-danger col-12 col-lg-6 mb-3 me-2 rounded-1 fw-bold"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-trash mb-1 me-1"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"
                    ></path>
                    <path
                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"
                    ></path>
                  </svg>
                  Delete
                </a>
                <a href="#" class="btn btn-success col mb-3 rounded-1 fw-bold">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-pencil-square mb-1 me-1"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                    ></path>
                    <path
                      fill-rule="evenodd"
                      d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                    ></path>
                  </svg>
                  Edit
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </section>
  <%- include('../partials/footer') %>
</div>
